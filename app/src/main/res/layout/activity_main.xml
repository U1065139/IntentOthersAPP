<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:onClick="btnOK"
        android:text="寫信給我們"
        app:layout_constraintStart_toStartOf="@+id/btnweb"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnweb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="57dp"
        android:onClick="btnOK"
        android:text="開啟弘光資管WEB"
        app:layout_constraintBottom_toTopOf="@+id/btnmap"
        app:layout_constraintStart_toStartOf="@+id/btnmap" />

    <Button
        android:id="@+id/btnmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="294dp"
        android:onClick="btnOK"
        android:text="開啟GOOGLE MAP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="59dp"
        android:onClick="btnOK"
        android:text="搜尋弘光科大"
        app:layout_constraintStart_toStartOf="@+id/btnmap"
        app:layout_constraintTop_toBottomOf="@+id/btnmap" />
</android.support.constraint.ConstraintLayout>